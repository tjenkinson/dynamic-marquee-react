{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prHourlyLimit": 0,
  "prCreation": "not-pending",
  "prConcurrentLimit": 0,
  "stabilityDays": 7,
  "vulnerabilityAlerts": true,
  "rangeStrategy": "bump",
  "ignorePaths": ["demo/**"],
  "packageRules": [
    {
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "matchPackageNames": ["dynamic-marquee"],
      "stabilityDays": 0
    },
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "pin"
    }
  ]
}
